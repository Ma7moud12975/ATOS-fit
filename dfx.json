{
  "canisters": {
    "frontend": {
      "type": "assets",
      "source": [
        "build/"
      ],
      "assets": [
        ["index.html", {"path": "/"}],
        ["/assets/*", {"path": "/assets"}]
      ],
      "exclude": [
        "**/*.map"
      ]
    },
    "backend": {
      "type": "motoko",
      "main": "src/backend/main.mo"
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    }
  },
  "version": 1
}